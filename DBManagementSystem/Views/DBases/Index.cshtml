@model IEnumerable<DBManagementSystem.Models.DBases>

@{
    ViewBag.Title = "Index";
}

<h2>Database</h2>

<div class="row">
    <div class="col-sm-6" id="dbContent">
        @Html.Partial("_Table", Model)
    </div>
    <div class="col-sm-6" id="tblContent">
        @if (Model.Count() > 0)
        {
            @Html.Partial("Details", Model.First())
        }
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")    
}
